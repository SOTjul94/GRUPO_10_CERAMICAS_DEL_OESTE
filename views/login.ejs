<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Ceramicas del oeste | <%- title %> </title >
 
        <link   href="/stylesheets/login.css" rel="stylesheet">
        <link   href="/stylesheets/header.css" rel="stylesheet">
        <link   href="/stylesheets/footer.css" rel="stylesheet">

     <a>   <script src="https://kit.fontawesome.com/ae1423e40e.js" crossorigin="anonymous"></script></a>
    </head>
<body class="body__fondo">
    <%- include('./partials/header') %>
    <div class="container">
      <div id="productCart__header__div-img">
         <img class="foto1" src="/img/Cerámicas_img2.png" alt="logo">
         <img class="foto2" src="/img/Cerámicas_img.png" alt="logo">
     </div>
     <form action="" method="POST" id="login">
      <div class="input-field">
         <input type="text" id="email" name="email">
         <label for="email">Email</label>
         <p><%= locals.errors && errors.email ? errors.email.msg : null %></p>
         <p id="emailMsg"></p>
      </div>
      <div class="input-field">
         <input class="pswrd" type="password" id="password" name="password">
         <label for="password">Contraseña</label>
         <p><%= locals.errors && errors.password ? errors.password.msg : null %></p>
         <p id="passwordMsg"></p>
      </div>
      <div class="button">
         <div class="inner"></div>
         <button type="submit"  id="loginButton">Inicia Sesion</button>
         <p id="msgloginError"></p>
      </div>
   </form>
      <div class="auth">
         Inicia Sesion Con
      </div>
      <div class="links">
         <div class="facebook">
            <i class="fab fa-facebook-square"><span>Facebook</span></i>
         </div>
         <div class="google">
            <i class="fab fa-google-plus-square"><span>Google</span></i>
         </div>
      </div>
      <div class="signup">
         <a href="/users/register">Crear una nueva cuenta</a>
      </div>
   </div>
   <%- include('./partials/footer') %> 
   <script src="/javascripts/login.js"></script>
</body>
</html>